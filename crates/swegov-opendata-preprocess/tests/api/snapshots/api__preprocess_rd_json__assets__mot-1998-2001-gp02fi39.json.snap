  <text andringsforfattning="" avsnitt="" behandlas_i="2001/02:FiU21" behandlas_i_punkt="" beteckning="13" datatyp="forslag" grundforfattning="" hangar_id="" intressent="" kammarbeslutstyp="" kammaren="=utskottet" nummer="13" utskottet="Avslag">
